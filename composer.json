{
    "name": "wrappedcbdc/cngn-php-library",
    "description": "An opensource library  to give you the best experience with managing your cNGN merchant account",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "WrappedCBDC\\": "src/",
            "Tests\\": "__test__/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit __test__"
    },
    "authors": [
        {
            "name": "Emmanuel Onyo",
            "email": "emmanuel.onyo@cngn.co"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "guzzlehttp/guzzle": "^7.9",
        "soneso/stellar-php-sdk": "^1.5",
        "owenvoke/mnemonics-php": "^2.0",
        "kornrunner/keccak": "^1.1",
        "mdanter/ecc": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    }
}
